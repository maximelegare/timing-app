<%- include("header") -%>

<div class="body-container">
  <div class="create-container">
    <%- include("noteForm") -%> 
    <%- include("timerForm") -%>
  </div>

  <div class="notes-container">
    <%- include("noteHeader") -%>
    <div class="notes-section">
      <% foundTimerItems.forEach(function(foundTimerItem){ %>
          <div class="timer-items">
            <div class="timer-items-content">
                <h3><%= foundTimerItem.title %></h3>
                <h3><%= foundTimerItem.time %></h3>
            </div>
            <form action="/delete" method="POST">
                <button type="submit" name="itemId" value="<%= foundTimerItem.id %>"><i class="fas fa-trash-alt"></i></button>
                <input type="hidden" name="collection" value="timer">
            </form>
         </div>
     <% }); %> 
        


   
    </div>
  </div>
</div>

<%- include("footer") -%>
